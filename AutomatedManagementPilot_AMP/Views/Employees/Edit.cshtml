@model AutomatedManagementPilot_AMP.Models.Employee

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EmployeeId" />
            <input type="hidden" asp-for="ApplicationUser" />
            @*<input type="hidden" asp-for="ApplicationId" />*@
            <div class="form-group">
                <label asp-for="ApplicationId" class="control-label">App Id </label>
                <select asp-for="ApplicationId" class="form-control" asp-items="ViewBag.ApplicationId"></select>
                <span asp-validation-for="ApplicationId" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="UserName" class="control-label">User Name</label>
                <select asp-for="UserName" class="form-control" asp-items="ViewBag.UserName"></select>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PayRoll" class="control-label">Pay Roll</label>
                <input asp-for="PayRoll" class="form-control" />
                <span asp-validation-for="PayRoll" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
