@model IEnumerable<AutomatedManagementPilot_AMP.Models.Machine>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Machine Index</h2>

@*<p>
    <a asp-action="Create">Create New</a>
</p>*@
<table class="table">
    <thead>
        <tr>
            <th>
                <label>Machine Number</label>

                @*@Html.DisplayNameFor(model => model.MachineNumber)*@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CycleTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Utilization)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MachineNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CycleTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Utilization)
            </td>

            <td>
                <a asp-action="Details" asp-route-id="@item.MachineId">Details</a>


            </td>

            @if (User.Identity.IsAuthenticated)
            {
                @if (User.IsInRole("Supervisor, Manager"))
                {
                    <a asp-action="Edit" asp-route-id="@item.MachineId">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.MachineId">Delete</a>
                }
            }
        </tr>
}
    </tbody>
</table>
